/* pages/checkout/comment.wxss */
page{
  background-color: #f6f6f6;
}
.header{
  width: 100%;
  height: 8vh;
  display: flex;
}
.header view{
  position: relative;
  color: #fff;
  margin: 20rpx 20rpx 0rpx;
  font-size:35rpx;
}

.comment-container{
  width: 100%;
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.comment-container textarea{
  width: 70vw;
  height:40vw;
  border-bottom: 1rpx solid #6c757d;
}

.edit-comment{
  width: 50vw;
  height: 12vw;
  margin: 80rpx auto;
  border-radius: 2vw;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}