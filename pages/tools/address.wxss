/* pages/tools/address.wxss */
page{
  background-color: #fff;
}
.header{
  width: 100%;
  height: 8vh;
  display: flex;
}
.header view{
  position: relative;
  color: #fff;
  margin: 20rpx 20rpx 0rpx;
  font-size: 35rpx;
}

.brief-container{
  width: 100%;
}
.brief-container .box{
  width: 96vw;
  height: 16vw;
  margin: 2vw;
  border-bottom: 1rpx solid #6c757d;
  display: flex;
  justify-content: around;
}
.brief-container .box .choose{
  width:10vw;
  height:16vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.brief-container .box .choose image{
  width: 5vw;
  height: 5vw;
}
.brief-container .box .info-bar{
  width: 74vw;
  height: 16vw;
}
.brief-container .box .info-bar .user-info{
  width: 70vw;
  height: 8vw;
  font: bolder;
} 
.brief-container .box .info-bar .address-info{
  width: 70vw;
  height: 8vw;
} 
.brief-container .box .edit{
  width: 10vw;
  height: 16vw;
  display: flex;
  justify-content: center;
  align-items: center;
}
.brief-container .box .edit image{
  width: 5vw;
  height: 5vw;
}

.add-address{
  width: 50vw;
  height:12vw;
  margin: 80rpx auto;
  border-radius: 2vw;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}