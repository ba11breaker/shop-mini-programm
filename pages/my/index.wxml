<!--pages/my/index.wxml-->
<view class="header" style="background-color:{{colors.darkPrimary}}">
  <view>个人中心</view>
</view>
<view class="my-header">
  <view class="login-info" wx:if="{{isLoggedIn}}">
    <image class="avatar" src="{{userInfo.avatar}}"></image>
    <view class="name">您好,{{userInfo.name}}<text bindtap="quitLog">></text></view>
  </view>
  <view class="log-off" wx:else bindtap="onClickLog">
    请先登录
  </view>
  <view class="info-bar">
    <view class="bar-content">
      <view class="num" style="color:{{colors.primary}}">0</view>
      <view class="title">我的积分</view>
    </view>
    <view class="bar-content">
      <view class="num" style="color:{{colors.primary}}">0</view>
      <view class="title">优惠券</view>
    </view>
    <view class="bar-content">
      <view class="num" style="color:{{colors.primary}}">0</view>
      <view class="title">我的收藏</view>
    </view>
  </view>
</view>

<view class="order-info">
  <view class="title-header">
    <view>订单详情</view>
    <view style="color:{{colors.primary}}">查看所有订单</view>
  </view>
  <view class="sections">
    <view class="section">
      <image src="/images/my/not-pay.png"></image>
      <view>待付款</view>
    </view>
    <view class="section">
      <image src="/images/my/not-send.png"></image>
      <view>待发货</view>
    </view>
    <view class="section">
      <image src="/images/my/sended.png"></image>
      <view>待收货</view>
    </view>
    <view class="section">
      <image src="/images/my/received.png"></image>
      <view>已完成</view>
    </view>
  </view>
</view>

<view class="tool-info">
  <view class="title-header">
    <view>常用工具</view>
  </view>
  <view class="sections">
    <view class="section">
      <image src="/images/my/setup.png"></image>
      <view>账户设置</view>
    </view>
    <view class="section">
      <image src="/images/my/address.png" style></image>
      <view>常用地址</view>
    </view>
    <view class="section">
      <image src="/images/my/upload.png"></image>
      <view>上传身份证</view>
    </view>
    <view class="section">
      <image src="/images/my/questions.png"></image>
      <view>常见问题</view>
    </view>
  </view>
  <view class="sections">
    <view class="section">
      <image src="/images/my/pingtuan.png"></image>
      <view>我的拼团</view>
    </view>
    <view class="section">
      <image src="/images/my/youhui.png"></image>
      <view>优惠券</view>
    </view>
    <view class="section">
      <image src="/images/my/jifen.png"></image>
      <view>我的积分</view>
    </view>
    <view class="section">
      <image src="/images/my/kefu.png"></image>
      <view>联系客服</view>
    </view>
  </view>
</view>
