.apifmSign {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 99999999999;
}
.apifmSign .s-b {
  width: 70%;
  margin: 0 auto;
  height: 400rpx;
  background-color: #fff;
  margin-top: 50%;
  padding-top: 20rpx;
  border-radius: 10rpx;
}

.apifmSign.s-b .s-l-b {
  text-align: center;
  width: 80%;
  border-bottom: 1px solid #f5f5f5;
  margin: 0 auto;
  padding-top: 20px;
}

.apifmSign .s-b .s-t-b {
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.apifmSign .s-b .s-t-b .s-t-n {
  font-size: 30rpx;
  color: #333;
  width: 80%;
  margin: 0 auto;
}

.apifmSign .s-b .s-t-b .s-t-n .input-group{
  width: 200px;
  margin: 1.5em auto;
  border-bottom: 1rpx solid lightgrey;
}
.apifmSign .s-b .s-t-b .s-t-n .input-group label{
  font-size: small;
  color:grey;
}
.apifmSign .s-b .s-t-b .s-t-n .input-group input{
  cursor: auto;
  display: block;
  height: 1.4rem;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  min-height: 1.4rem;
}


.apifmSign .s-b button::after {
  border-radius: 4rpx;
  border: 0;
}

.apifmSign .s-b .l {
  width: 80%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  background-color: #04be01;
  color: #fff;
}

.apifmSign .s-b .c {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 80%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  background-color: #ccc;
  color: #333;
}